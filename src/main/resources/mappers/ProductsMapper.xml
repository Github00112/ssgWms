    <insert id="insert" parameterType="com.ssg.wsmt.product.domain.ProductsVO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO PRODUCTS ( NAME, STATUS, COST, PRICE,  BRAND_ID, OWNER_ID)
        VALUES ( #{name}, #{status}, #{cost}, #{price}, #{brandId}, #{businessOwnerId})
    </insert>


    <!-- updateProduct UPDATE 쿼리 -->
    <update id="update" parameterType="com.ssg.wsmt.product.domain.ProductsVO">
        UPDATE PRODUCTS
        SET NAME = #{name}, COST = #{cost}, PRICE = #{price}
        WHERE ID = #{id}
    </update>

</mapper>
